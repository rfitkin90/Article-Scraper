<!-- Add comment modal -->
<div class="modal" id="sign-up-modal">
   <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">

         <!-- Modal Header -->
         <div class="modal-header">
            <h4 class="modal-title">Sign Up</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
         </div>

         <!-- Modal body -->
         <div class="modal-body">
            <div class="form-group">
               <label for="email">Email</label>
               <input type="email" class="form-control" id="sign-up-email" name="email">
               <span id="sign-up-email-error"></span>
            </div>
            <div class="form-group">
               <label for="pwd">Password</label>
               <input type="password" class="form-control" id="sign-up-pwd" name="pswd">
               <span id="password-reqs">Must be at least 8 characters long and contain at least 1 letter and 1
                  number</span>
               <span id="sign-up-password-error"></span>
            </div>
            <div class="form-group">
               <label for="pwd">Confirm Password</label>
               <input type="password" class="form-control" id="sign-up-confirm-pwd" name="pswd">
            </div>
         </div>

         <!-- Modal footer -->
         <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="sign-up-submit" data-dismiss="modal">Submit</button>
         </div>

      </div>
   </div>
</div>