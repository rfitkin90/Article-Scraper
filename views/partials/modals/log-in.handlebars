<!-- Add comment modal -->
<div class="modal" id="log-in-modal">
   <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">

         <!-- Modal Header -->
         <div class="modal-header">
            <h4 class="modal-title">Log In</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
         </div>

         <!-- Modal body -->
         <div class="modal-body">
            <div class="form-group">
               <label for="email">Email</label>
               <input type="email" class="form-control" id="log-in-email" name="email">
            </div>
            <div class="form-group">
               <label for="pwd">Password</label>
               <input type="password" class="form-control" id="log-in-pwd" name="pswd">
            </div>
         </div>

         <!-- Modal footer -->
         <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="log-in-submit" data-dismiss="modal">Submit</button>
         </div>

      </div>
   </div>
</div>