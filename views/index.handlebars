<!-- Navbar -->
<nav class="navbar navbar-expand-md bg-dark navbar-dark">
   <span class="navbar-brand">Powered by <a href="https://www.currentaffairs.org/" target="blank">Current
         Affairs</a></span>
   <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
   </button>
   <div class="collapse navbar-collapse flex-row justify-content-end" id="collapsibleNavbar">
      <ul class="navbar-nav">
         <li class="nav-item">
            <a class="nav-link" href="#" data-toggle="modal" data-target="#sign-up-modal">
               <i class="fas fa-user"></i> Sign Up
            </a>
         </li>
         <li class="nav-item">
            <a class="nav-link" href="#" data-toggle="modal" data-target="#log-in-modal">
               <i class="fas fa-sign-in-alt"></i> Login
            </a>
         </li>
      </ul>
   </div>
</nav>

<!-- Jumbotron -->
<div class="jumbotron jumbotron-fluid">
   <div class="container">
      <h1>MongoDB Scraper</h1>
      <button class="btn btn-secondary" id="scrape-articles-btn">Scrape recent articles</button>
   </div>
</div>

<!-- Main container -->
<div class="container" id="content">
   {{!-- append all the articles here --}}
   {{#each articles}}
   <div class="row article-div">
      <div class="col-md-4">
         <img src={{this.img}} />
      </div>
      <div class="col-md-8">
         <h4 class="post-title">
            <a href="{{this.URL}}" target="blank">{{this.headline}}</a>
         </h4>
         <p class="summary">{{this.summary}}</p>
         <p class="by-line">by <a href="{{this.byLineURL}}" target="blank">{{this.byLine}}</a></p>

         <button class="btn btn-secondary view-comments-btn" data-articleId="{{this._id}}" data-toggle="modal"
            data-target="#view-comments-modal" data-headline="{{this.headline}}">View Comments</button>

         <button class="btn btn-secondary post-comment-btn" data-articleId="{{this._id}}" data-toggle="modal"
            data-target="#post-comment-modal">Post Comment</button>
      </div>
   </div>
   <hr>
   {{/each}}
</div>

<!-- Modals -->
{{> modals/post-comment}}
{{> modals/view-comments}}
{{> modals/sign-up}}
{{> modals/log-in}}